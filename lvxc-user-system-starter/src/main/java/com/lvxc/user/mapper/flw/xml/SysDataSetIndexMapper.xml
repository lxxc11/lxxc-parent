<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lvxc.user.mapper.flw.SysDataSetIndexMapper">

    <select id="getDataSetIndexByRoleIds" resultType="com.lvxc.user.domain.vo.LoginDataSetIndex">
        SELECT
           distinct si.*
        FROM
            "sys_data_set_index" si
        JOIN "sys_role_menu_data" md ON si."id" = md.data_set_index_id
        WHERE
            si.del_flag = FALSE
        <if test="list != null and list.size() > 0">
            AND md.role_id IN
            <foreach collection="list" item="item" separator="," close=")" open="(" index="index">
                #{item}
            </foreach>
        </if>
        ORDER BY si.sort_order
    </select>

</mapper>